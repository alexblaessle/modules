nextflow_workflow {

    name "Test Workflow BAM_DEDUP_STATS_SAMTOOLS_UMITOOLS"
    script "../main.nf"
    workflow "BAM_DEDUP_STATS_SAMTOOLS_UMITOOLS"
    tag "samtools"
    tag "samtools/index"
    tag "samtools/stats"
    tag "samtools/idxstats"
    tag "samtools/flagstat"
    tag "subworkflows"
    tag "subworkflows_nfcore"
    tag "bam_dedup_stats_samtools_umitools"
    tag "bam_stats_samtools"
    tag "umitools"
    tag "umitools/dedup"

    test("test_bam_dedup_stats_samtools_umitools") {

        when {
            params {
                outdir   = "$outputDir"
            }
            workflow {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true),
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam_bai'], checkIfExists: true)
                ]
                input[1] = false
                """
            }
        }

        then {
            assertAll(
                {assert workflow.success},
                {assert snapshot(workflow.out).match()}
            )
        }

    }

}
